generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "postgres"
    url    = env("POSTGRES_URL_NON_POOLING")
    relationMode = "prisma"
}

model Category {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name   String
    userId String
    budget Int
    currency Currency @default(CLP)
    timedCategories TimedCategory[]

    @@unique([userId, name], map: "Category name must be unique")
    @@index([userId])
}
model TimedCategory {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    startDate DateTime 
    endDate DateTime 
    budget Int
    name String
    userId String
    currentAmount Int @default(0)
    currency Currency @default(CLP)

    categoryId String?
    category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
    
    transactions Transaction[]

    @@index([categoryId])
}

model Transaction {
    id String @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name String
    userId String
    amount Int
    currency Currency @default(CLP)

    timedCategoryId String
    timedCategory TimedCategory @relation(fields: [timedCategoryId], references: [id], onDelete: Cascade)

    @@index([timedCategoryId])
    @@index([userId])

}

enum Currency {
  EUR
  CLP
}